*
    margin 0
    padding 0

html
body
    position fixed
    top 0
    left 0
    width 100%
    height 100%
    overflow hidden

canvas
    position absolute
    top 0
    left 0
    background: rgb(42,74,80)
    background: radial-gradient(circle, rgba(42,74,80,1) 0%, rgba(14,14,73,1) 82%, rgba(2,0,36,1) 100%)
    background-repeat no-repeat

.positionedContainer
    position absolute
    height 100%
    width 100%
    text-align center
    z-index 10

.container
    display flex
    align-items center
    justify-content center
    flex-direction column
    height 100%
    background-color #020524

.text
    font-family 'Lato', sans-serif
    color white     
    font-weight lighter
    user-select none

.progressBar
    width 60%
    height 1%
    margin-top 3%
    background-color gray

.progressBarProgression
    width 0%
    height 100%
    background-color white

.startButton
    cursor pointer
    padding: 15px
    width: 15%
    margin-top 3%
    border 1px solid 
    border-color: white
    text-align center

.startButton:hover
    color #020524
    background-color white


.invisible
    display none
    z-index -100